pipeline {
    agent any
    environment {
      PATH="/usr/local/bin:${PATH}"
    }
    stages {
        stage('Build') {
            steps {
              sh "echo $PATH"
              sh "cmake .."
              cmakeBuild(
                    buildDir: 'build',
                    installation: 'InSearchPath',
                    steps: [
                        [args: 'all install', envVars: 'DESTDIR=${WORKSPACE}/artifacts']
                    ]
              )
                echo 'Building..'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}